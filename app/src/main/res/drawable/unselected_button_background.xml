<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Đặt màu nền khi nút không được chọn -->
    <solid android:color="@color/unselected_button_color" />
    <!-- Đặt viền cho nút khi nó không được chọn -->
    <stroke android:width="1dp" android:color="@color/unselected_button_stroke_color" />
    <!-- Đặt góc cong cho nút -->
    <corners android:radius="4dp" />
</shape>
